<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="me.joshvocal.booklisting.BookDetailsActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/book_details_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            tools:text="Title" />

        <TextView
            android:id="@+id/book_details_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            tools:text="Subtitle" />

        <TextView
            android:id="@+id/book_details_authors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            tools:text="Authors" />

        <TextView
            android:id="@+id/book_details_published_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            tools:text="Published Date" />

        <TextView
            android:id="@+id/book_details_isbn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            tools:text="ISBN_13" />

        <TextView
            android:id="@+id/book_details_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Description" />

    </LinearLayout>


</ScrollView>


